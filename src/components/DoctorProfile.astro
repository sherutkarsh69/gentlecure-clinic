<style>
  .about {
    background: var(--cream);
    overflow: hidden;
  }

  .about-container {
    display: grid;
    grid-template-columns: 1fr 1.1fr;
    gap: 4rem;
    align-items: center;
  }

  .about-visual {
    position: relative;
  }

  .qualification-cards {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  .qual-card {
    background: var(--white);
    padding: 1.5rem;
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    gap: 1rem;
    transition: var(--transition);
    border: 1px solid var(--gray-100);
  }

  .qual-card:hover {
    transform: translateY(-3px);
    box-shadow: var(--shadow-md);
    border-color: var(--primary-pale);
  }

  .qual-icon {
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--primary-pale);
    border-radius: var(--radius);
    font-size: 1.35rem;
    flex-shrink: 0;
  }

  .qual-info h4 {
    font-family: var(--font-body);
    font-weight: 600;
    color: var(--primary);
    font-size: 1rem;
    margin-bottom: 0.15rem;
  }

  .qual-info p {
    font-size: 0.8rem;
    color: var(--text-muted);
    line-height: 1.4;
  }

  .about-content {
    position: relative;
  }

  .section-badge {
    display: inline-block;
    padding: 0.5rem 1.25rem;
    background: var(--primary-pale);
    color: var(--primary);
    border-radius: var(--radius);
    font-size: 0.85rem;
    font-weight: 500;
    margin-bottom: 1rem;
  }

  .about-title {
    font-size: 2.5rem;
    color: var(--dark);
    margin-bottom: 0.5rem;
  }

  .about-subtitle {
    color: var(--primary);
    font-weight: 500;
    font-size: 1.05rem;
    margin-bottom: 1.5rem;
  }

  .about-description {
    color: var(--text-light);
    font-size: 1rem;
    line-height: 1.8;
    margin-bottom: 1rem;
  }

  .about-highlights {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.875rem;
    margin: 2rem 0;
  }

  .highlight {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-weight: 500;
    font-size: 0.95rem;
    color: var(--text);
    transition: var(--transition-fast);
  }

  .highlight:hover {
    color: var(--primary);
  }

  .highlight-icon {
    width: 22px;
    height: 22px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--primary);
    color: var(--white);
    border-radius: 50%;
    font-size: 0.7rem;
    font-weight: 700;
  }

  .about-cta {
    margin-top: 2rem;
  }

  @media (max-width: 1024px) {
    .about-container {
      grid-template-columns: 1fr;
      gap: 3rem;
      text-align: center;
    }

    .about-visual {
      order: -1;
    }

    .qualification-cards {
      max-width: 420px;
      margin: 0 auto;
    }

    .about-highlights {
      justify-content: center;
    }

    .highlight {
      justify-content: center;
    }

    .about-cta {
      display: flex;
      justify-content: center;
    }
  }

  @media (max-width: 640px) {
    .about-title {
      font-size: 2rem;
    }

    .about-highlights {
      grid-template-columns: 1fr;
    }

    .qualification-cards {
      grid-template-columns: 1fr;
    }
  }
</style>
