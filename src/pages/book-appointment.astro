---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Book Appointment" description="Book your appointment at GentleCure Homeopathic Clinic with Dr. Isha Tonk">
  <Navbar />
  <main class="appointment-page">
    <section class="appointment-hero">
      <div class="container">
        <span class="badge">üìÖ Schedule a Visit</span>
        <h1>Book Your <span class="gradient-text">Appointment</span></h1>
        <p>Take the first step towards natural healing. Fill out the form below.</p>
      </div>
    </section>

    <section class="appointment-form-section">
      <div class="container">
        <div class="form-wrapper">
          <form class="appointment-form" id="appointmentForm">
            <div class="form-row">
              <div class="form-group">
                <label for="name">Full Name *</label>
                <input type="text" id="name" name="name" required placeholder="Your full name">
              </div>
              <div class="form-group">
                <label for="phone">Phone Number *</label>
                <input type="tel" id="phone" name="phone" required placeholder="+91 XXXXX XXXXX">
              </div>
            </div>

            <div class="form-row">
              <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" id="email" name="email" placeholder="your@email.com">
              </div>
              <div class="form-group">
                <label for="age">Age *</label>
                <input type="number" id="age" name="age" required placeholder="Your age">
              </div>
            </div>

            <div class="form-row">
              <div class="form-group">
                <label for="date">Preferred Date *</label>
                <input type="date" id="date" name="date" required>
              </div>
              <div class="form-group">
                <label for="time">Preferred Time *</label>
                <select id="time" name="time" required>
                  <option value="">Select a time slot</option>
                  <option value="10:00 AM">10:00 AM</option>
                  <option value="11:00 AM">11:00 AM</option>
                  <option value="12:00 PM">12:00 PM</option>
                  <option value="02:00 PM">02:00 PM</option>
                  <option value="03:00 PM">03:00 PM</option>
                  <option value="04:00 PM">04:00 PM</option>
                  <option value="05:00 PM">05:00 PM</option>
                  <option value="06:00 PM">06:00 PM</option>
                  <option value="07:00 PM">07:00 PM</option>
                </select>
              </div>
            </div>

            <div class="form-group full-width">
              <label for="concern">Health Concern / Symptoms *</label>
              <textarea id="concern" name="concern" rows="4" required placeholder="Please describe your health concern or symptoms..."></textarea>
            </div>

            <div class="form-group full-width">
              <label for="history">Previous Treatment History (Optional)</label>
              <textarea id="history" name="history" rows="3" placeholder="Any previous treatments or medications..."></textarea>
            </div>

            <button type="submit" class="btn btn-primary btn-submit">
              <span>Book Appointment</span>
              <span class="btn-icon">‚Üí</span>
            </button>
          </form>

          <div class="form-success" id="formSuccess" style="display: none;">
            <div class="success-icon">‚úÖ</div>
            <h3>Appointment Request Sent!</h3>
            <p>We'll contact you shortly to confirm your appointment.</p>
            <a href="/" class="btn btn-secondary">Back to Home</a>
          </div>
        </div>

        <div class="clinic-info-card">
          <h3>üìç Clinic Location</h3>
          <p>B-139, near Unique Lab Pathology,<br>B-Block, Lohia Nagar,<br>Ghaziabad, UP 201001</p>
          <div class="divider"></div>
          <h3>‚úâÔ∏è Email</h3>
          <p><a href="mailto:appointments@gentlecure.online">appointments@gentlecure.online</a></p>
          <div class="divider"></div>
          <h3>üïê Clinic Hours</h3>
          <p>Monday - Friday: 5:30 PM - 9:00 PM<br>Sunday: 10:00 AM - 1:00 PM</p>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  .appointment-page { 
    padding-top: 80px; 
  }
  
  .appointment-hero { 
    background: linear-gradient(180deg, var(--primary-pale) 0%, var(--cream) 100%); 
    padding: 4rem 0 3rem; 
    text-align: center; 
  }
  
  .badge { 
    display: inline-block; 
    padding: 0.5rem 1.25rem; 
    background: var(--white); 
    color: var(--primary); 
    border-radius: var(--radius); 
    font-size: 0.9rem; 
    margin-bottom: 1rem;
    box-shadow: var(--shadow-sm);
  }
  
  .appointment-hero h1 { 
    font-size: 2.75rem; 
    color: var(--dark); 
    margin-bottom: 1rem; 
  }
  
  .appointment-hero p { 
    color: var(--text-light); 
    font-size: 1.1rem; 
    max-width: 500px; 
    margin: 0 auto; 
  }
  
  .appointment-form-section { 
    padding: 3rem 0 5rem; 
  }
  
  .appointment-form-section .container { 
    display: grid; 
    grid-template-columns: 1fr 320px; 
    gap: 2rem; 
    align-items: start; 
  }
  
  .form-wrapper { 
    background: var(--white); 
    padding: 2.5rem; 
    border-radius: var(--radius-xl); 
    box-shadow: var(--shadow-lg); 
  }
  
  .form-row { 
    display: grid; 
    grid-template-columns: 1fr 1fr; 
    gap: 1.25rem; 
    margin-bottom: 1.25rem; 
  }
  
  .form-group { 
    display: flex; 
    flex-direction: column; 
  }
  
  .form-group.full-width { 
    margin-bottom: 1.25rem; 
  }
  
  .form-group label { 
    font-weight: 500; 
    color: var(--dark); 
    margin-bottom: 0.5rem; 
    font-size: 0.9rem; 
  }
  
  .form-group input, 
  .form-group select, 
  .form-group textarea { 
    padding: 0.875rem 1rem; 
    border: 1.5px solid var(--gray-200); 
    border-radius: var(--radius); 
    font-family: var(--font-body); 
    font-size: 0.95rem; 
    transition: var(--transition-fast);
    background: var(--cream);
  }
  
  .form-group input:focus, 
  .form-group select:focus, 
  .form-group textarea:focus { 
    outline: none; 
    border-color: var(--primary); 
    background: var(--white);
    box-shadow: 0 0 0 3px var(--primary-pale); 
  }
  
  .form-group textarea { 
    resize: vertical; 
  }
  
  .btn-submit { 
    width: 100%; 
    padding: 1rem 2rem; 
    font-size: 1rem; 
    display: flex; 
    align-items: center; 
    justify-content: center; 
    gap: 0.5rem; 
  }
  
  .btn-icon { 
    font-size: 1.15rem; 
    transition: var(--transition-fast); 
  }
  
  .btn-submit:hover .btn-icon { 
    transform: translateX(4px); 
  }
  
  .form-success { 
    text-align: center; 
    padding: 3rem 2rem; 
  }
  
  .success-icon { 
    font-size: 3.5rem; 
    margin-bottom: 1rem; 
  }
  
  .form-success h3 { 
    font-size: 1.5rem; 
    color: var(--primary); 
    margin-bottom: 0.5rem; 
  }
  
  .form-success p { 
    color: var(--text-light); 
    margin-bottom: 1.5rem; 
  }
  
  .clinic-info-card { 
    background: var(--white); 
    padding: 2rem; 
    border-radius: var(--radius-xl); 
    box-shadow: var(--shadow); 
  }
  
  .clinic-info-card h3 { 
    font-family: var(--font-body); 
    font-size: 0.95rem; 
    font-weight: 600; 
    color: var(--dark); 
    margin-bottom: 0.75rem; 
  }
  
  .clinic-info-card p { 
    color: var(--text-light); 
    font-size: 0.9rem; 
    line-height: 1.6; 
  }

  .clinic-info-card a {
    color: var(--primary);
    transition: var(--transition-fast);
  }

  .clinic-info-card a:hover {
    color: var(--primary-dark);
  }
  
  .divider { 
    height: 1px; 
    background: var(--gray-200); 
    margin: 1.25rem 0; 
  }
  
  @media (max-width: 900px) { 
    .appointment-form-section .container { 
      grid-template-columns: 1fr; 
    } 
  }
  
  @media (max-width: 640px) { 
    .form-row { 
      grid-template-columns: 1fr; 
    } 
    .appointment-hero h1 { 
      font-size: 2rem; 
    } 
  }
</style>

<script>
  document.getElementById('appointmentForm')?.addEventListener('submit', (e) => {
    e.preventDefault();
    document.getElementById('appointmentForm')!.style.display = 'none';
    document.getElementById('formSuccess')!.style.display = 'block';
  });
</script>
